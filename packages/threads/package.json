{
  "name": "@tetraship/threads",
  "version": "0.0.1",
  "description": "Universal thread and activity persistence layer",
  "keywords": [
    "threads",
    "tetraship",
    "ai",
    "chat",
    "persistence",
    "history",
    "messaging",
    "conversation",
    "activities",
    "storage"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tetraship/npm-packages.git",
    "directory": "packages/threads"
  },
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "default": "./dist/database/index.js"
    },
    "./models": {
      "types": "./dist/models/index.d.ts",
      "default": "./dist/models/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "dependencies": {
    "@tetraship/backend": "workspace:*",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.0",
    "zod": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "@ai-sdk/react": ">=1.0.0",
    "libsql": "^0.4.0 || ^0.5.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "@ai-sdk/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "libsql": "^0.5.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}